<div class="row">
  <div class="col-md-7">


<p id="notice"><%= notice %></p>

<div class="page-header"> 
  <h3>Listing installments</h3>
</div>


<% if @installments.empty? %>
<p>No Installments Found <p>
<% else %>

<script>
$(document).ready(function(){
    $('#myTable').DataTable();
});

</script>

<table class = "table table-striped" id="myTable">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Installment type</th>
      <th>Description</th>
      <th>Status</th>
      <th>Installment date</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @installments.each do |installment| %>
      <tr>
        <td><%= installment.amount %></td>
        <td><%= installment.installment_type %></td>
        <td><%= installment.description %></td>
        <td><%= installment.status %></td>
        <td><%= installment.installment_date %></td>
        <td><%= installment.project_id %></td>
        <td><%= link_to 'Show', installment, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_installment_path(installment), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', installment,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>


</div>
 </div>
